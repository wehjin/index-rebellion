<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/correctionsFooterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="3dp"
        android:layout_height="16dp"
        android:layout_margin="4dp"
        android:background="@color/secondaryStrokeColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYMBOL"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="15" />

        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="30"
            android:background="@color/primaryColor" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:backgroundTint="@color/secondaryStrokeColor" />

        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="30"
            android:background="@color/primaryColor" />

        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="10"
            android:background="@drawable/bg_outlined_rectangle" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5" />
    </LinearLayout>

    <android.support.design.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell $10.4K" />

    <View
        android:layout_width="3dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:background="@color/secondaryStrokeColor" />

    <android.support.design.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Constituent" />

</LinearLayout>
